# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar 
{
    position top
    font pango:xos4 Terminus regular 12
    status_command $HOME/.config/conky/conky-i3bar
    
    # Enforce window ordering, but don't show the extra numbers
    strip_workspace_numbers yes
    
    tray_output none

    colors
    {
        statusline  #999999
        background  #002833

        # Colors            border      backgr.     text
        focused_workspace   $white      $white      $black
        active_workspace    #073642     #073642     #696f89
        inactive_workspace  #073642     #073642     $white
        urgent_workspace    $orange     $orange     $dark
    }
}

