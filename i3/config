#############################################
# Modes
#############################################
set $sysmenu "  [p]oweroff    [r]eboot    [l]ogout    [s]uspend    [h]ibernate"
bindsym $mod+Delete mode $sysmenu

mode $sysmenu
{
    bindsym p exec --no-startup-id /bin/bash ~/.config/i3/i3exit shutdown, mode "default"
    bindsym r exec --no-startup-id /bin/bash ~/.config/i3/i3exit reboot, mode "default"
    bindsym l exec --no-startup-id /bin/bash ~/.config/i3/i3exit logout, mode "default"
    bindsym s exec --no-startup-id /bin/bash ~/.config/i3/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id /bin/bash ~/.config/i3/i3exit hibernate, mode "default"

    # back to normal : Enter or Escape
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# load the wallpaper
exec --no-startup-id feh --bg-scale ~/.dotfiles/wallpapers/archlinux-wallpaper.png

# Pulse Audio controls

exec --no-startup-id paswitch alsa_output.pci-0000_00_1f.3.analog-stereo

# increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume @DEFAULT_SINK@ +5%;echo $(pactl list sinks | grep -A7 \\"Name:$(pactl info | grep -i \\"Default Sink\\" | cut -d':' -f2)\\" | tail -1 | cut -d'/' -f2 | sed -e 's/^[[:space:]]*//' | cut -d'%' -f1) > $HOME/.config/conky/outfiles/sounddevice-volume.out"
# decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume @DEFAULT_SINK@ -5%;echo $(pactl list sinks | grep -A7 \\"Name:$(pactl info | grep -i \\"Default Sink\\" | cut -d':' -f2)\\" | tail -1 | cut -d'/' -f2 | sed -e 's/^[[:space:]]*//' | cut -d'%' -f1) > $HOME/.config/conky/outfiles/sounddevice-volume.out"
# mute sound
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute @DEFAULT_SINK@ toggle;if [ $(pactl list sinks | grep -A6 \\"Name:$(pactl info | grep -i \\"Default Sink\\" | cut -d':' -f2)\\" | tail -1 | cut -d':' -f2 | sed -e 's/^[ \t]*//' | grep -i yes | wc -l) -eq 0 ]; then echo 87c7bf > $HOME/.config/conky/outfiles/sounddevice-mute.out; else echo f57900 > $HOME/.config/conky/outfiles/sounddevice-mute.out; fi"
# mute microphone
bindsym XF86AudioMicMute exec --no-startup-id "pactl set-source-mute @DEFAULT_SOURCE@ toggle"

# switch audio source
bindsym $mod+Shift+F10 exec --no-startup-id "paswitch alsa_output.pci-0000_00_1f.3.analog-stereo;echo INTERN > $HOME/.config/conky/outfiles/sounddevice.out"
bindsym $mod+Shift+F11 exec --no-startup-id "paswitch alsa_output.pci-0000_01_00.1.hdmi-stereo-extra1;echo HDMI > $HOME/.config/conky/outfiles/sounddevice.out"
bindsym $mod+Shift+F12 exec --no-startup-id "paswitch $(pactl list sinks | grep Name | grep usb | head -n1 | cut -d':' -f2);echo USB > $HOME/.config/conky/outfiles/sounddevice.out"

# Screen backlight control

bindsym XF86MonBrightnessUp exec --no-startup-id "light -A 5.0"
bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 5.0"

